{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@entities/*": ["src/common/entities/*"],
      "@enums/*": ["src/common/enums/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@filters/*": ["src/filters/*"],
    }
  }
}